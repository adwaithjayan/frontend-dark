---
import { twMerge } from "tailwind-merge";

const {name,id,class:className} =Astro.props;
---


<div class={twMerge("relative group z-0 flex",className)}>
    <div class="-z-10 absolute inset-0 outline outline-2 -outline-offset-2 group-focus-within:outline-fuchsia-500 outline-zinc-700 [mask-image:linear-gradient(222deg,transparent,transparent_10px,black_10px)]"></div>
    <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="absolute top-0 right-0 group-focus-within:text-fuchsia-500 text-zinc-700 -z-10"
    >
    <path
        d="M0 1H12.2667L23 11.7333V24"
        stroke="currentColor"
        stroke="2"
    ></path>
    </svg>
    <textarea  name={name} id={id} class="bg-transparent  outline-none w-full px-4 py-3 min-h-32"></textarea>
</div>