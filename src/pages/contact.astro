---
import { CutcornerButton } from "../components/CutcornerButton";
import IntererContent from "../components/IntererContent.astro";
import InteriorHero from "../components/InteriorHero.astro";
import DefaultLayout from "../layouts/Default.astro";
import InputBox from "../components/inputBox.astro";
import TextareaBox from "../components/textareaBox.astro";
---



<DefaultLayout>
    <InteriorHero>
        <p class="uppercase font-extrabold text-center text-zinc-500 tracking-wider">Lets Talk</p>
        <h1 class="font-black text-5xl md:text-6xl lg:text-7xl nt-4 text-center font-heading">Contact Us</h1>
        <p class="text-center text-xl md:text-2xl mt-6 max-w-xl mx-auto text-zinc-400">We're here to help and answer any questions you may have.Reach out to us to learn more about our services,get support, or to apply for positions</p>
    </InteriorHero>
    <IntererContent>
        <div class="max-w-xl mx-auto">
            <h2 class="font-heading font-black text-3xl">What can we help you with</h2>
            <form class="flex flex-col mt-8" name="contact" method="post" data-netlify="true">
                <label for="name">Name</label>
                <InputBox type="text" name="name" id="name" class="mt-1"/>
                
                <label class="mt-4" for="email">Email</label>
                <InputBox type="email" name="email" id="email" class="mt-1"/>

                <label class="mt-4" for="message">Message</label>
                <TextareaBox name="message" id="message" class="mt-1"/>
                <CutcornerButton className="mt-4">Send Message</CutcornerButton>    
            </form>
        </div>
    </IntererContent>
</DefaultLayout>